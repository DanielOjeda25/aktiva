---

<section id="servicios">
  <div class="container mx-auto py-8">
    <h1 class="text-3xl font-semibold text-center mb-8">Nuestros Servicios</h1>
    <div class="sm:flex flex-wrap">
      {
        serviciosDesarrolloWeb.map((servicio) => (
          <div class="w-full sm:w-1/4 shadow-md px-4 py-3 mt-4 mb-4">
            <div class="bg-white h-full shadow-md rounded-lg overflow-hidden">
              <img
                src={servicio.cover}
                alt="Descripción de la imagen"
                class="w-10 h-10 sm:w-full sm:h-auto mx-auto"
              />

              <div class="p-4 items-center justify-center flex flex-col">
                <h2 class="text-xl font-semibold text-gray-800 text-start">
                  {servicio.titulo}
                </h2>
                <ul class="mt-2 text-sm text-gray-600">
                  {servicio.subitems.map((subitem) => (
                    <li>
                      <span class="mr-2">•</span> {subitem}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
